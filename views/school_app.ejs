<%- include('partials/header') %>

<main class="content">
    <h2>School Application</h2>

    <form action="/school-application/search" method="POST">
        <label for="emisNumber">Enter EMIS Number:</label>
        <input type="text" id="emisNumber" name="emisNumber" required>
        <button type="submit">Search School</button>
    </form>

    <% if (schoolData) { %>
        <h3>School Details:</h3>
        <p><strong>School Name:</strong> <%= schoolData.school_name %></p>
        <p><strong>EMIS Number:</strong> <%= schoolData.emis_number %></p>
        <p><strong>Number of Applications:</strong> <%= schoolData.num_students %></p>
        <p><strong>Number of Active Applications:</strong> <%= schoolData.num_complete_applications %></p>
        <p><strong>Number of Incomplete Applications:</strong> <%= schoolData.num_incomplete_applications %></p>
        <p><strong>District Code:</strong> <%= schoolData.district_code %></p>
        <p><strong>Province Code:</strong> <%= schoolData.province_code %></p>

        <div class="action-buttons">
            <a href="/school-application/district/<%= schoolData.district_code %>" class="button">View District Data</a>
            <a href="/school-application/province/<%= schoolData.province_code %>" class="button">View Province Data</a>
        </div>
    <% } else if (districtData) { %>
        <h3>District Data for District Code: <%= districtData.district_code %></h3>
        <p><strong>Total Schools:</strong> <%= districtData.total_schools %></p>
        <p><strong>Total Applications:</strong> <%= districtData.total_students %></p>
        <% if (districtData.province_code) { %>
            <p><a href="/school-application/province/<%= districtData.province_code %>" class="button">View Province Data for this District</a></p>
        <% } %>
    <% } else if (provinceData) { %>
        <h3>Province Data for Province Code: <%= provinceData.province_code %></h3>
        <p><strong>Total Schools:</strong> <%= provinceData.total_schools %></p>
        <p><strong>Total Applications:</strong> <%= provinceData.total_students %></p>
    <% } else if (typeof error !== 'undefined') { %>
        <p class="error-message"><%= error %></p>
    <% } %>
</main>

<%- include('partials/footer') %>

<style>
    /* Add this to style.css or embed here for specific page styling */
    form {
        margin-bottom: 20px;
    }
    form label, form input, form button {
        margin-right: 10px;
    }
    .action-buttons {
        margin-top: 20px;
    }
    .action-buttons .button {
        display: inline-block;
        padding: 8px 15px;
        background-color: #28a745;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin-right: 10px;
        transition: background-color 0.3s ease;
    }
    .action-buttons .button:hover {
        background-color: #218838;
    }
    .error-message {
        color: red;
        font-weight: bold;
    }
</style>